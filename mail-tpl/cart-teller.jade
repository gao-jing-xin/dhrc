html
    head
        style.
            body {
                color: #888;
                font-size: 20px;
            }

            dt {
                font-weight: bold;
                color: #176ed0;
            }

            dd {
                margin-left: 15px;
            }

            td {
                border: 1px #ccc dotted;
                font-size: 0.8em;
            }

            thead td, .total {
                font-weight: bold;
                font-size: 1em;
            }


    body
        p <b>询价请求</b>
        dl
            dt 用户
            dd #{userName}
            dt 性别
            dd #{sex}
            dt 公司
            dd #{company}
            dt 电话
            dd #{phone}
            dt QQ
            dd #{qq}
            dt 标题
            dd #{artTitle}
            dt 摘要
            dd #{artSubject ? artSubject : '无'}
            dt 明细
            dd
                table(cellpadding="5px" cellspacing="0")
                    thead
                        td(width='250px') 公众号
                        td(width='100px') 微信ID
                        td(width='150px') 投放时间
                        td(width='80px') 参考单价
                        td(width='150px') 投放天数
                        td(width='80px') 参考价格
                    each item in orderItems
                        tr
                            td
                                a(href= getGZHUrl(item)) #{item.title}
                            td #{item.code}
                            td #{ftd(item.dateStart)}
                            td ¥#{item.price}
                            td #{item.days}天
                            td ¥#{item.days * item.price}
                    tr(class='total')
                        td 合计（#{orderItems.length}位）
                        td &nbsp;
                        td &nbsp;
                        td &nbsp;
                        td #{totalDays}天
                        td ¥#{totalPrice}
